#%Module
proc ModulesHelp { } {
   puts stderr "ESSL 6.2.1"
   puts stderr ""
}
# One line description
module-whatis "ESSL 6.2.1"

set host summit
set PREFIX     /sw/$host/essl/6.2.1-0/essl/6.2

# Common Paths
prepend-path LD_LIBRARY_PATH $PREFIX/lib64

# Place XL libs at lowest priority so they are present for all compilers but
# eclipsed by XL libs provided by XL compiler module if one is loaded.
append-path LD_LIBRARY_PATH /sw/$host/xl/16.1.1-10/lib

prepend-path MANPATH        $PREFIX/man
setenv OLCF_ESSL_ROOT       $PREFIX
